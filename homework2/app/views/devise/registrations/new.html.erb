<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :num, "学工号" %><br/>
    <%= f.text_field :num, autofocus: true, autocomplete: "num" %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :username, "姓名" %><br/>
    <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :password, "密码" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>
        characters minimum)</em>
    <% end %><br/>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :password_confirmation, "确认密码" %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <br/>
  <div class="field">
    您的身份是：
    <%= f.radio_button :status, "teacher" %><%= f.label :status_teacher, "老师" %><%= f.radio_button :status, "student" %><%= f.label :status_student, "学生" %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "注册" %>
  </div>
<% end %>
<br/>
<%= render "devise/shared/links" %>
