<p style="color: green"><%= notice %></p>

<%= render @subject %>

<div>
  <%= link_to "编辑这个项目", edit_subject_path(@subject) %> |
  <%= link_to "返回主页", subjects_path %>
  <%= button_to "删除这个项目", @subject, method: :delete %>
  <h2>讨论区</h2>
  <div id="discussions">
    <%= render @subject.discussions %>
  </div>
  <%= form_with(model: [@subject,Discussion.new]) do |f|%>
  <p>
    <%= f.label :content , "新的讨论"%><br/>
    <%= f.text_area :content, :rows=>5%>
  </p>
  <p>
    <%=f.submit "添加讨论"%>
  </p>
  <% end %> 
</div>
