<h2>登录</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <div class="field">
    <%= f.label :signin,"学工号"%><br />
    <%= f.text_field :signin, autofocus: true, autocomplete: "signin" %>
  </div>


  <div class="field">
    <%= f.label :password,"密码" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me,"记住我" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "登录" %>
  </div>
<% end %>
<div>
<%= render "devise/shared/links" %>
</div>
<div class="reback">
    <%= link_to "返回主页", subjects_path %>
</div>
