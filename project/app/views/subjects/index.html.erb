<p style="color: green"><%= notice %></p>

<h1>项目列表</h1>

<div class="subjects">
<% @subjects.each do |subject| %>
<div class="subject">
   <%= link_to subject.title, subject %><br/>
    <%= time_ago_in_words subject.created_at %> ago. | 
    
   <%= link_to '编辑项目', edit_subject_path(subject) %>
   <%= link_to '删除项目', subject, data: { turbo_method: :delete, turbo_confirm: '确定删除?' } %>
   <pre><%= subject.info %></pre>
</div>
<% end %>
</div>
